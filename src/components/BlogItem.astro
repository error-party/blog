---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
const { title, relDate, image } = Astro.props;
import img from "../assets/images/sit.png";
---

<div class="blog-item">
  <a href="/">
    <article>
      <div class="icon-img">
        {(<Image src={image || img} alt="blog-image" />)}
      </div>
      <div class="remain">
        <h2 class="title">
          {title}
        </h2>
        <div class="date">
          <FormattedDate date={relDate} />
        </div>
      </div>
      <div class="short-des">
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse doloremque quo, ullam maxime
          perferendis accusamus sapiente eos nostrum perspiciatis in?
        </p>
      </div>
      <div class="arrow-icon">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#000000"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-move-right-icon lucide-move-right"
          ><path d="M18 8L22 12L18 16"></path><path d="M2 12H22"></path></svg
        >
      </div>
    </article>
  </a>

  <div class="last-border"></div>
</div>

<style>
  .blog-item {
    position: relative;

    &:last-child() {
      a {
        border-bottom: 1.5px dashed var(--gray);
      }
    }

    .last-border {
      position: absolute;
      right: 0;
      top: 0;
      height: 100%;

      border-left: 0;
      border-top: 1px solid;
      border-bottom: 1px solid;
      border-right: 1px solid;
      border-color: var(--border-color);
      background: var(--background);
      width: 0px;
      transition: 0.4s ease-in-out;
    }
    &:hover {
      .last-border {
        width: 16px;
        right: -16px;
      }
    }
  }

  a {
    /* padding: 0 1rem; */
    display: block;
    border-top: 1.5px dashed var(--gray);
  }
  article {
    display: flex;
    padding: 2rem;

    color: var(--black);

    .icon-img {
      flex-shrink: 0;
      /* width: 6rem;
      aspect-ratio: 1; */

      width: 96px;
      height: 96px;

      img {
        object-fit: cover;
        width: 100%;
        height: 100%;
      }
    }

    .remain {
      max-width: 270px;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-left: 2rem;

      h2 {
        text-transform: capitalize;
        font-size: 1.7rem;
        line-height: 1.1;
      }

      .date {
        color: rgba(39, 39, 39, 0.504);
      }
    }
    .short-des {
      max-width: 450px;
    }
    .arrow-icon {
      display: flex;
      align-items: center;
      padding: 0 1rem;
      flex-grow: 1;
      justify-content: end;
    }
  }
</style>
